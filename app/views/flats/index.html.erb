
<div class="container my-3">
  <div class="row">
    <div class="class col-12">
      <h1>All Our Flats (<%= @flats.count %>)</h1>
    </div>
  </div>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="flat-card">

            <div class="flat-card-image" style="background-image: url('<%= flat.img %>')"></div>

            <div class="flat-card-content">

              <div class="flat-card-title">
                <h4><%= flat.name %></h4>
              </div>

              <p><%= flat.address %></p>

              <div class="flex flat-card-icons">
                <div class="flex">
                  <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
                </div>
                <div class="flex ml-3">
                  <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
                </div>
              </div>

            </div>

            <div class="flat-card-actions">
              <%= link_to "More Info", flat_path(flat.id), class: "text-primary" %>
              <%= link_to "Delete", flat_path(flat.id), method: :delete, class: "ml-3 text-warning" %>
              <%= link_to "Delete", flat_path(flat.id), method: :delete, class: "ml-3 text-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
